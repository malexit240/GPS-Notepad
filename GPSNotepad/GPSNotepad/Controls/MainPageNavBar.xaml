<?xml version="1.0" encoding="utf-8" ?>
<StackLayout xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:GPSNotepad.Controls"
             x:Class="GPSNotepad.Controls.MainPageNavBar"
             HorizontalOptions="FillAndExpand"
             Margin="12,0,12,0"
             Orientation="Horizontal">
    <ImageButton x:Name="SettingsButton" 
                 Source="ic_settings.png" 
                 VerticalOptions="CenterAndExpand" 
                 Margin="0,0,12,0"
                 Clicked="OnSettingsButtonClicked"
                 BackgroundColor="Transparent"/>

    <ImageButton x:Name="CancelButton" 
                 Source="ic_left_blue.png"
                 IsVisible="False"
                 VerticalOptions="CenterAndExpand" 
                 Margin="0,0,12,0"
                 Clicked="UnfocusSearchField" 
                 BackgroundColor="Transparent"/>
    
    <controls:SearchEntry x:Name="searchField" 
                          HorizontalOptions="FillAndExpand"/>
    
    <ImageButton x:Name="logoutButton" 
                 Source="ic_exid.png"
                 VerticalOptions="CenterAndExpand"
                 Margin="12,0,0,0" 
                 Clicked="OnLogoutButtonClicked"
                 BackgroundColor="Transparent"/>
</StackLayout>