<?xml version="1.0" encoding="utf-8" ?>
<StackLayout xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             x:Class="GPSNotepad.Controls.SearchEntry"
             Orientation="Horizontal" BackgroundColor="#F1F3FD">
    <Entry x:Name="searchEntry"
           HorizontalOptions="FillAndExpand"
           Margin="0"
           Placeholder="Search" 
           BackgroundColor="Transparent" 
           >
        <Entry.Behaviors>
            <prism:EventToCommandBehavior EventName="Focused" Command="{Binding OnSearchFieldFocused}"/>
            <prism:EventToCommandBehavior EventName="Unfocused" Command="{Binding OnSearchFieldUnfocused}"/>
        </Entry.Behaviors>
    </Entry>
    <Button  x:Name="clearButton"
             HorizontalOptions="End"
             Margin="0" Padding="0"
             CornerRadius="0" 
             ImageSource="ic_clear.png"
             BackgroundColor="Transparent"
             Clicked="ClearButtonClicked"
             IsVisible="False"/>
</StackLayout>