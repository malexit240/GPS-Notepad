    <Color x:Key="HoveredColor">#273BC6</Color>
    <Color x:Key="PressedColor">#192680</Color>
    <Color x:Key="Variant">#F1F3FD</Color>

    <Color x:Key="System_White">#FEFEFD</Color>
    <Color x:Key="System_LightGray">#D7DDE8</Color>
    <Color x:Key="System_Gray">#858E9E</Color>
