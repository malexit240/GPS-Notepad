<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="GPSNotepad.Temp.Views.SignInPage"
             Title="{Binding TextResources[SignInTitle]}"
             Style="{DynamicResource pageStyle}">
    <ContentPage.ToolbarItems>
        <ToolbarItem IconImageSource="icon_settings.png"
            Command="{prism:NavigateTo 'SettingsPage'}"/>
    </ContentPage.ToolbarItems>
    <StackLayout>
        <ActivityIndicator IsEnabled="{Binding HasLongActivity}"
                           Style="{DynamicResource activityIndicatorStyle}"/>
        <Entry Text="{Binding Email}"
               Placeholder="{Binding TextResources[Email]}"
               Style="{DynamicResource entryStyle}"/>
        <Entry Text="{Binding Password}"
               Placeholder="{Binding TextResources[Password]}"
               IsPassword="True"
               Style="{DynamicResource entryStyle}"/>
        <Button Text="{Binding TextResources[SignIn]}"
                Command="{Binding SignInCommand}"
                Style="{DynamicResource buttonStyle}"/>
        <Button Text="{Binding TextResources[SignUp]}"
                Command="{Binding GoToSignUpPageCommand}"
                Style="{DynamicResource buttonStyle}"/>
    </StackLayout>
</ContentPage>