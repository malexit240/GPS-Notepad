<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             xmlns:converters="clr-namespace:GPSNotepad.Converters"
             xmlns:controls="clr-namespace:GPSNotepad.Controls"
             x:Class="GPSNotepad.Views.PinsTabPage"
             x:Name="page"
             Style="{DynamicResource pageStyle}">
    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:ItemTappedEventArgsConverter x:Key="itemTappedEventArgsConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>
    <Grid RowDefinitions="*">
        <StackLayout Grid.Row="0">
            <controls:MainPageNavBar IsFoccused="{Binding IsSearchFieldFoccused}" 
                                 SearchText="{Binding SearchField}" 
                                 SettingsButtonCommand="{Binding GoToSettingsPageCommand}"
                                 LogoutButtonCommand="{Binding LogoutCommand}"
                                 Margin="0,17,0,13"/>
            <ListView  ItemsSource="{Binding Pins}" 
                       HasUnevenRows="True"
                       IsPullToRefreshEnabled="False"
                       SelectionMode="None"
                       SeparatorVisibility="None">
                <ListView.Behaviors>
                    <prism:EventToCommandBehavior EventName="ItemTapped"
                                              Command="{Binding PinTappedCommand}"
                                              EventArgsConverter="{x:StaticResource itemTappedEventArgsConverter}"/>
                </ListView.Behaviors>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <ViewCell.ContextActions>
                                <MenuItem Command="{Binding Path=BindingContext.ShowQRCodeCommand,
                                          Source={x:Reference page}}" 
                                          IconImageSource="ic_qr.png"
                                          CommandParameter="{Binding Self}"/>
                                <MenuItem Command="{Binding Path=BindingContext.EditPinContextCommand,
                                          Source={x:Reference page}}"
                                          CommandParameter="{Binding Self}"
                                          IconImageSource="ic_edit.png"/>
                                <MenuItem Command="{Binding DeletePinContextCommand}" 
                                          IconImageSource="ic_delete"/>
                            </ViewCell.ContextActions>
                            <StackLayout Padding="5,0,5,15">

                                <Grid ColumnDefinitions="60,*" HeightRequest="60">
                                    <controls:ImageCheckBox Grid.Column="0"
                                                            Margin="10"
                                                            CheckedImageSource="ic_like_blue.png" 
                                                            UncheckedImageSource="ic_like_gray.png" 
                                                            IsChecked="{Binding Favorite}"
                                                            BackgroundColor="{DynamicResource Variant}"/>
                                    <StackLayout Grid.Column="1">
                                        <Label Text="{Binding Name}"
                                       Style="{DynamicResource labelStyle}"/>
                                        <Label Text="{Binding Description}"
                                       Style="{DynamicResource labelStyle}"/>
                                    </StackLayout>

                                </Grid>
                                <BoxView Style="{DynamicResource stripStyle}"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
        <Button Grid.Row="0" 
                ImageSource="ic_plus.png"
                Style="{DynamicResource floatButtonStyle}"
                BackgroundColor="#596EFB"
                Command="{Binding GoToAddPinFormCommand}"/>
    </Grid>
</ContentPage>